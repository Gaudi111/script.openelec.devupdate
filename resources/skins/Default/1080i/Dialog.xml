<?xml version="1.0" encoding="UTF-8"?>
<window>
    <animation effect="slide" start="-1920" end="0" time="500" tween="cubic" easing="out">WindowOpen</animation>
    <controls>
        <control type="group">
            <description>Window size and position</description>
            <width>1100</width>
            <height>960</height>
            <centerleft>960</centerleft>
            <centertop>540</centertop>
            
            <control type="image">
                <description>Background image</description>
                <width>1100</width>
                <texture colordiffuse="f0111111">white.png</texture>
                    <!--
                    <bordertexture colordiffuse="ffb2afa8">white.png</bordertexture>
                    <colordiffuse>f0111111</colordiffuse>
                    <bordersize>2</bordersize>
                    -->
                </control>
            
            <control type="group">
                <description>Left panel</description>

                <control type="image">
                    <top>20</top>
                    <left>100</left>
                    <texture>logotype.png</texture>
                    <aspectratio>keep</aspectratio>
                    <height>152</height>
                    <width>482</width>
                </control>
                          
                <control type="label" id="100">
                    <top>190</top>
                    <left>120</left>
                    <width>680</width>
                    <height>50</height>
                    <aligny>center</aligny>
                    <textcolor>ff87bde1</textcolor>
                </control>
                
                <control type="group">
                    <left>0</left>
                    <top>260</top>
        
                    <control type="list" id="10">
                        <left>0</left>
                        <top>25</top>
                        <width>680</width>
                        <height>455</height>
                        <onright>20</onright>
                        <itemlayout height="65" width="680">                            
                            <control type="image">
                                <visible>StringCompare(ListItem.Label2, selected)</visible>
                                <texture border="5">white.png</texture>
                                <colordiffuse>f02b2b2b</colordiffuse>
                            </control>
                            <control type="label">
                                <visible>StringCompare(ListItem.Label2, selected)</visible>
                                <width>680</width>
                                <left>50</left>
                                <aligny>center</aligny>
                                <textcolor>ffffffff</textcolor>
                                <info>ListItem.Label</info>
                            </control>
                            <control type="label">
                                <visible>!StringCompare(ListItem.Label2, selected)</visible>
                                <width>680</width>
                                <left>50</left>
                                <aligny>center</aligny>
                                <textcolor>88b2afa8</textcolor>
                                <info>ListItem.Label</info>
                            </control>
                        </itemlayout>
                        <focusedlayout height="65" width="680">
                            <control type="group">
                                <animation effect="slide" start="0,35" end="0,0" time="200" reversible="false" tween="back" easing="out" condition="Container(10).OnPrevious">Focus</animation>
                                <animation effect="slide" start="0,-35" end="0,0" time="200" reversible="false" tween="back" easing="out" condition="Container(10).OnNext">Focus</animation>
                                
                                <control type="image">
                                    <visible>!Control.HasFocus(10) + StringCompare(ListItem.Label2, selected)</visible>
                                    <texture border="5">white.png</texture>
                                    <colordiffuse>f02b2b2b</colordiffuse>
                                </control>
                                
                                <control type="image">
                                    <visible>Control.HasFocus(10) + StringCompare(ListItem.Label2, selected)</visible>
                                    <texture border="5">white.png</texture>
                                    <colordiffuse>502b2b2b</colordiffuse>
                                </control>
                                    
                                <control type="image">
                                    <!-- #88bde1 -->
                                    <visible>Control.HasFocus(10)</visible>
                                    <texture border="12">highlight.png</texture>
                                </control>
                                
                                <control type="label">
                                    <visible>!StringCompare(ListItem.Label2, selected)</visible>
                                    <width>680</width>
                                    <left>50</left>
                                    <aligny>center</aligny>
                                    <textcolor>88b2afa8</textcolor>
                                    <info>ListItem.Label</info>
                                </control>
                                
                                <control type="label">
                                    <visible>StringCompare(ListItem.Label2, selected)</visible>
                                    <width>680</width>
                                    <left>50</left>
                                    <aligny>center</aligny>
                                    <textcolor>ffffffff</textcolor>
                                    <info>ListItem.Label</info>
                                </control>
                            </control>
                        </focusedlayout>
                    </control>
                </control>

                <control type="group">
                    <description>Right panel</description>
                    <left>680</left>
    
                    <control type="image">
                        <texture border="5">white.png</texture>
                        <colordiffuse>f02b2b2b</colordiffuse>
                    </control>
    
                    <control type="scrollbar" id="600">
                        <left>412</left>
                        <texturesliderbackground colordiffuse="ff999999">white.png</texturesliderbackground>
                        <texturesliderbar colordiffuse="ffffffff">white.png</texturesliderbar>
                        <showonepage>false</showonepage>
                    </control>
        
                    <control type="list" id="20">
                        <left>0</left>
                        <top>25</top>
                        <width>420</width>
                        <height>910</height>
                        <pagecontrol>600</pagecontrol>
                        <onleft>10</onleft>
                        <itemlayout height="65" width="420">
    
                            <control type="label">
                                <width>420</width>
                                <left>50</left>
                                <aligny>center</aligny>
                                <textcolor>ffb2afa8</textcolor>
                                <info>ListItem.Label</info>
                            </control>
    
                            <control type="image">
                                <left>330</left>
                                <top>10</top>
                                <height>48</height>
                                <width>48</width>
                                <info>ListItem.Icon</info>
                            </control>
                        </itemlayout>
                        <focusedlayout height="65" width="420">
                            <control type="group">
                                <animation effect="slide" start="0,35" end="0,0" time="200" reversible="false" tween="back" easing="out" condition="Container(20).OnPrevious">Focus</animation>
                                <animation effect="slide" start="0,-35" end="0,0" time="200" reversible="false" tween="back" easing="out" condition="Container(20).OnNext">Focus</animation>
    
                                <control type="image">
                                    <!-- #88bde1 -->
                                    <visible>Control.HasFocus(20)</visible>
                                    <texture border="12">highlight.png</texture>
                                </control>
    
                                <control type="label">
                                    <visible>Control.HasFocus(20)</visible>
                                    <width>420</width>
                                    <left>50</left>
                                    <aligny>center</aligny>
                                    <textcolor>ffffffff</textcolor>
                                    <info>ListItem.Label</info>
                                </control>
                                
                                <control type="label">
                                    <visible>!Control.HasFocus(20)</visible>
                                    <width>420</width>
                                    <left>50</left>
                                    <aligny>center</aligny>
                                    <textcolor>ffb2afa8</textcolor>
                                    <info>ListItem.Label</info>
                                </control>
                               
                                <control type="image">
                                    <left>330</left>
                                    <top>10</top>
                                    <height>48</height>
                                    <width>48</width>
                                    <info>ListItem.Icon</info>
                                </control>
                            </control>
                        </focusedlayout>
                    </control>
                </control>
            </control>
        </control>  
    </controls>
</window>
